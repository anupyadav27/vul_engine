# Vulnerability Engine Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vulnerability_db
DB_USER=vuln_user
DB_PASSWORD=vuln_pass
DB_POOL_SIZE=10

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Security
API_KEYS=["your-secret-api-key","agent-api-key-1","agent-api-key-2"]
SECRET_KEY=your-secret-key-change-in-production

# CORS (use * for development, specific domains for production)
ALLOWED_ORIGINS=["*"]

# Scanning Configuration
MAX_CONCURRENT_SCANS=5
SCAN_TIMEOUT=300
CVE_CACHE_TTL=3600
SEVERITY_THRESHOLD=MEDIUM